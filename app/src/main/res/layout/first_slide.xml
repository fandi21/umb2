<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSlide_1">

    <ImageView
        android:id="@+id/universitas"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/universitas"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="200dp" />

    <TextView
        android:id="@+id/slide_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_1_title"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/universitas"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/slide_desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_1_desc"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_below="@id/slide_title1"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp" />

</RelativeLayout>